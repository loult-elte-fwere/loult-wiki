body {
    text-decoration: none;
    color: blue;
    padding: 0;
    margin: 0;
    font-family: Deja-vu, sans-serif, Arial, Helvetica;
}

a {
    text-decoration: none;
} 

a:hover {
    color: black;
}

header {
    display: flex;
    width:100%;
    background-color: #F6F6F6;
    border-bottom: #A7D7F9 solid 1px;
}

#logo {
    flex: 1;
}

#main-nav {
    flex: 3;
    border-left: #A7D7F9 solid 1px;
}

#logo > a > img {
    display: table-cell;
    vertical-align: middle;
}

#login {
    text-align: right;
    flex: 1;
    padding: 10px 0;
}

#login > ul {
    flex: 3;
    vertical-align: middle;
}

#login > ul > li {
    list-style: none;
    display: inline;
    padding: 0 10px 0 0;
    font-size: 0.8em;
}

#login > ul > li > a{
    text-decoration: none;
    padding: 15px;
    color: white;
    background-color: #6495ED;
    border-radius: 5px;
    font-weight: bold;
}

#side-nav {
    background-color: #F6F6F6;
}

#side-menu > h2 {
    color:black;
    font-size: 1em;
}

#side-menu {
    padding: 10px;
}

#side-menu > ul {
    margin: 0;
    padding: 0;
}

#side-menu > ul > li {
    list-style-type: none;
    font-size: 0.8em;
}

#container {
    display: flex;
}

main {
    min-height: 700px;
}

footer {
    border-top: #A7D7F9 solid 1px;
    background-color: #F6F6F6;
    height: 50px;
    text-align: center;
}

footer > ul > li {
    list-style-type: none;
    display: inline-block;
    padding: 0 0 10px 0;
}
